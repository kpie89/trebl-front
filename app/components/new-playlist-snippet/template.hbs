<div id="playlist-list">
<hr>
<label for="title">Title</label>
{{input type="title"
        id="title"
        placeholder="Title"
        value=playlist.title}}
        <label for="desc">Description</label>
        {{input type="desc"
                id="desc"
                placeholder="Description"
                value=playlist.desc}}

<h2>{{playlist.song.title}}</h2>
<button class="btn btn-default" type="submit" {{action "updatePlaylist" playlist=playlist}}>Make it</button>
</div>
