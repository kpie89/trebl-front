<div id="playlist-list">
  <hr>
  <h2>{{playlist.title}}</h2>
  <h3>{{playlist.song.title}}</h3>
  <h4>{{playlist.desc}}</h4><button class="btn btn-default" {{action "updatePlaylist"}}>Update</button>
  <h5>Made by: {{playlist.user.email}}</h5>
  {{#if isAuthenticated}}
    <button class="btn btn-default" {{ action "willComment" playlist}}>Add a new song!</button>
      <button class="btn btn-default" {{ action "deletePlaylist" playlist}}>Over it.</button>
  {{/if}}
  {{#link-to 'playlist' playlist}}
    <button class="btn btn-default">Details</button>
  {{/link-to}}
  <button class="btn btn-default" {{action "playTrack" playlist.song.soundcloud_id}}>Play</button>
</div>
